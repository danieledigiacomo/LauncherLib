<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:id="@+id/toast_layout_root"
    android:orientation="vertical"
    android:background="@drawable/background_dialog_white"
    android:padding="40dip" >
    
    
    <TextView 
        android:id="@+id/text"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:textSize="20sp"
    	android:layout_marginBottom="20dip"
    	android:textColor="@color/blue"  
    	android:layout_alignParentTop="true"
    	android:layout_centerHorizontal="true"	
    	android:text="@string/seleziona_nome_cloud"/>
    
    
    <LinearLayout 
        android:layout_below="@id/text"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_centerHorizontal="true"
    	android:orientation="horizontal">
        
         <ImageView 
	        android:id="@+id/btnParent"
	        android:layout_width="50dip"
	        android:layout_height="50dip"
	        android:padding="5dip"
	        android:src="@drawable/ic_parent"
	        android:background="@drawable/btn_circle_primary_color_1"/>
         
        <ImageView 
            android:layout_width="20dip"
    		android:layout_height="20dip"
    		android:scaleType="fitXY"
    		android:layout_gravity="center_vertical"
    		android:layout_marginLeft="10dip"
    		android:layout_marginRight="10dip"
    		android:layout_marginTop="0dip"
    		android:src="@drawable/right_arrow"/>
        
        <ImageView 
            android:layout_width="50dip"
    		android:layout_height="50dip"
    		android:src="@drawable/us0510eu"/>
        
        
    </LinearLayout>
    
    

</RelativeLayout>
